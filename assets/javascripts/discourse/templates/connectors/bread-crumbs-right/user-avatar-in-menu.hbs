{{#if currentUser }}
<div class="user-image">
  <a href="/u/{{currentUser.username}}" data-user-card="{{unbound currentUser.username}}">{{avatar currentUser imageSize="medium"}}</a>
</div>
{{/if}}

<div class="user-detail">
  <div class='name-line'>
    <span class="username"><a href="/u/{{currentUser.username}}" data-user-card="{{unbound currentUser.username}}">{{unbound currentUser.name}}</a></span>
  </div>
</div>